{% extends 'ErpUserBundle:Profile:base.html.twig' %}

{% form_theme form _self %}
{% form_theme autoWithdrawalForm _self %}

{% block date_widget %}
    {% set type = 'text' %}
    {{ block('form_widget_simple') }}
{% endblock date_widget %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/erpproperty/js/property-details-form.js') }}"></script>
{% endblock %}

{% block pageContent %}
    {{ parent() }}
    {% include "ErpPropertyBundle:Wizard/blocks:header.html.twig" %}

    <main id="main">
        {% include "ErpPropertyBundle:Wizard/blocks:tabs.html.twig" with {'property': property, 'currentTab': 'setup-lease'} %}

        <div class="tab-content">
            {% include "ErpPropertyBundle:Wizard/blocks:setup-lease.html.twig"  %}
        </div>
    </main>
{% endblock %}