{% if admin.isGranted('EDIT', object) and admin.hasRoute('edit') and object.isActive %}
    <a href="{{ admin.generateObjectUrl('edit', object) }}" class="btn btn-sm btn-default edit-link" title="{{ 'action_edit'|trans({}, 'SonataAdminBundle') }}" style="margin: 0px 2px; border-radius: 3px;">
        <i class="fa fa-edit"></i>
        {{ 'action_edit'|trans({}, 'SonataAdminBundle') }}
    </a>
{% endif %}