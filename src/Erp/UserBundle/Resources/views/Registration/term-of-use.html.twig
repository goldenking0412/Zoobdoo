{% extends '::base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/erpsite/js/register.js') }}"></script>
{% endblock %}

{% block headerBannerTitle %}
    Terms of Use
{% endblock %}

{% block pageContent %}
    <section id="register-form-tenants" class="register-form">
        <div class="container">
            <div class="row">
                <div class="title-block">
                    <h1 class="bold-text">Register</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <p class="text-center">You must read and accept Zoobdoo Terms of Use before you can start using our website.</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    {{ form_start(form, { attr: {'class': 'form-horizontal', 'novalidate': 'novalidate'}, 'enctype': form_enctype(form)}) }}

                    <div class="row">
                        <div class="form-group terms-group">
                            <div class="col-xs-12 terms-text displayed">
                                <h2>Terms of Use</h2>
                                {% include 'ErpSiteBundle:StaticPage/blocks:terms-of-use.html.twig' %}
                            </div>
                            <div class="col-xs-12">
                                <div class="checkbox">
                                    {{ form_widget(form.isTermOfUse) }}
                                    <label class="control-label">I have read and agree to <a href="#" class="terms-link red-link">Zoobdoo Terms of Use</a> provided on this page.</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="form-footer">
                                    {{ form_widget(form.save) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="hide">
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
